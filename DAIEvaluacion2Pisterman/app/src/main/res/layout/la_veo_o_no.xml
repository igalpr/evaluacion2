<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/TituloImagen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:id="@+id/ImageViewAUsar"
        app:layout_constraintTop_toBottomOf="@id/TituloImagen" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar al Json"
        android:textSize="30sp"
        android:id="@+id/AgregarInfo"
        app:layout_constraintTop_toBottomOf="@id/ImageViewAUsar"
        />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ver imagen"
    android:id="@+id/BotonVer"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textSize="30sp"
    android:layout_marginBottom="15sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/BotonSiguiente"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30sp"
        android:layout_marginBottom="15sp"
        android:text="Siguiente"
        android:id="@+id/BotonSiguiente"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/BotonVer"/>
</android.support.constraint.ConstraintLayout>